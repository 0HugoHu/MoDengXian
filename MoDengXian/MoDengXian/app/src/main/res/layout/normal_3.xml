<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="27dp"
        android:src="@drawable/icon"
        android:adjustViewBounds="true"
        android:maxHeight="27dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerInside"
        android:maxWidth="27dp"
        android:id="@+id/Normal_Icon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_height="27dp" />


    <TextView
        android:id="@+id/Normal_1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/Normal_Icon"
        android:gravity="center"
        android:textColor="#424242"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/Normal_2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/Normal_1"
        android:gravity="center"
        android:textColor="#424242"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/Normal_3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/Normal_2"
        android:gravity="center"
        android:textColor="#424242"
        android:textSize="15sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_alignStart="@id/Normal_3"
        android:layout_alignEnd="@id/Normal_3"
        android:layout_marginTop="33dp"
        android:scaleType="fitXY"
        android:src="@drawable/d0"
        android:layout_height="2dp" />

    <TextView
        android:id="@+id/Normal_4"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/Normal_3"
        android:gravity="center"
        android:textColor="#424242"
        android:textSize="15sp" />
</RelativeLayout>
