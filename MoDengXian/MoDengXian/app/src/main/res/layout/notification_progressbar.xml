<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notification_progressbar_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/icon" />

    <TextView
        android:id="@+id/notification_progressbar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/notification_progressbar_icon"
        android:text="正在更新每日内容，请稍后...(0%)" />

    <ProgressBar
        android:id="@+id/notification_progressbar_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:progress="50"
        android:layout_alignBottom="@+id/notification_progressbar_icon"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_progressbar_text"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/notification_progressbar_icon" />
</RelativeLayout>