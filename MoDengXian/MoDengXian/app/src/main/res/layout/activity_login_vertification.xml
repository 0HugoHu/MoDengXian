<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ver="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        ver:layout_constraintEnd_toEndOf="parent"
        ver:layout_constraintStart_toStartOf="parent"
        ver:layout_constraintTop_toTopOf="parent">

        <com.dalimao.corelibrary.VerificationCodeInput
            android:id="@+id/vertification_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            ver:box="6"
            ver:box_bg_focus="@drawable/verification_edit_bg_focus"
            ver:box_bg_normal="@drawable/verification_edit_bg_normal"
            ver:child_h_padding="15dp"
            ver:inputType="number"
            ver:layout_constraintBottom_toBottomOf="parent"
            ver:layout_constraintEnd_toEndOf="parent"
            ver:layout_constraintStart_toStartOf="parent"
            ver:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="验证码已发送到您的手机"
        ver:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        ver:layout_constraintEnd_toEndOf="parent"
        ver:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:background="@drawable/login_bg"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/vertification_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="重新发送35秒"
        android:textColor="#3498db"
        ver:layout_constraintEnd_toEndOf="parent"
        ver:layout_constraintStart_toStartOf="parent"
        ver:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

</android.support.constraint.ConstraintLayout>